{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "vite/client",
      "node",
      "svelte"
    ],
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": ["ESNext"]
  }
}
